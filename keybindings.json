// Place your key bindings in this file to override the defaults
[
	// https://code.visualstudio.com/docs/getstarted/keybindings

	{
		//"key"    : "ctrl+shift+;", // linux
		"key"    : "ctrl+shift+oem_2", // windows
		"command": "editor.action.blockComment",
		"when"   : "editorTextFocus"
	},

	{
		//"key"    : "ctrl+;", // linux
		 "key"    : "ctrl+oem_2", // windows
		"command": "editor.action.commentLine",
		"when"   : "editorTextFocus"
	},
	{
		//"key": "alt+;", // linux
		"key": "alt+oem_2", // windows
		"command": "extension.insertSemicolon",
		"when": "editorTextFocus"
	},
	{
		//"key": "shift+alt+;", // linux
		"key": "alt+shift+oem_2", // windows
		"command": "extension.insertSemicolonWithNewLine",
		"when": "editorTextFocus"
	},

	{
		"key"    : "ctrl+shift+alt+s",
		"command": "workbench.action.files.saveAll",
		"when"   : "editorTextFocus"
	},

	{
		"key": "ctrl+1",
		// "modifier": "alt",
		"command": "editor.action.insertSnippet",
		"when": "editorTextFocus",
		"args": {
			"snippet": "<div>#${TM_SELECTED_TEXT}#</div>"
		}
	},
	{
		"key": "ctrl+shift+alt+up",
		"command": "editor.emmet.action.incrementNumberByOne"
	},
	{
		"key": "ctrl+shift+alt+down",
		"command": "editor.emmet.action.decrementNumberByOne"
	},
	{
		"key": "shift+alt+down",
		"command": "editor.action.transformToLowercase"
	},
	{
		"key": "shift+alt+up",
		"command": "editor.action.transformToUppercase"
	}
]
