					"foreground": "#EC7600"
				}
			},
			//////////////////////////////////////////////////////////////////// underline
			{
				"scope": [
					"storage"
				],
				"settings": {
					"fontStyle": "underline"
				}
			},
			//////////////////////////////////////////////////////////////////// bold
			{
				"scope": [
					"entity.name.type.class", //class names
					"keyword", //import, export, return…
					"constant", //String, Number, Boolean…, this, super
					"storage.modifier", //static keyword
					"storage.type.class.js", //class keyword

					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric"
				],
				"settings": {
					"fontStyle": "bold"
				}
			},
			//////////////////////////////////////////////////////////////////// italic
			{
				"scope": [
					"comment",
					"entity.name.type.class", //class names
					"keyword", //import, export, return…
					"storage.modifier", //static keyword
					"storage.type.class.js", //class keyword

					"invalid",
					"keyword.operator"
				],
				"settings": {
					"fontStyle": ""
					// "fontStyle": "italic" // :"" para tirar italic
				}
			}
		]
