				"settings": {
					"foreground": "#6969FA"
				}
			},
			{
				"scope": ["keyword"],
				"settings": {
					"foreground": "#64b2db"
				}
			},
			{
				"scope": ["keyword.control"],
				"settings": {
					"foreground": "#3E87E3"
				}
			},
			{
				"scope": ["variable.other.global"], // #_SESSION
