{
	// references
	// https://code.visualstudio.com/docs/getstarted/themes#_customizing-a-color-theme
	// https://code.visualstudio.com/docs/getstarted/settings

	// ------------------------------------------------------------------------- configs
	"editor.minimap.showSlider": "always",
	"editor.insertSpaces": false, ///////////////////////////// dependent 1
	"editor.detectIndentation": false, //////////////////////// dependent 1
	"editor.mouseWheelZoom": true,
	"editor.showFoldingControls": "always",
	"editor.mouseWheelScrollSensitivity": 1,
	"editor.renderWhitespace": "boundary",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.rulers": [80],
	"editor.smoothScrolling": true,

	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"files.insertFinalNewline": true,

	"html.format.indentHandlebars": true,

	"window.title": "${activeEditorLong}${separator}${rootName}",
	"window.newWindowDimensions": "inherit",

	// "workbench.editor.labelFormat": "short",
	"workbench.editor.scrollToSwitchTabs": true,
	"workbench.editor.highlightModifiedTabs": true,

	// ------------------------------------------------------------------------- vsc window colors
	// https://code.visualstudio.com/api/references/theme-color
	"workbench.colorCustomizations": {
		// "button.background": "#ffff00",
		"activityBar.background": "#222",
		"activityBarBadge.background": "#f00",
		"activityBar.border": "#000",
		"activityBar.activeBackground": "#0000ff",

		// "editor.findHighlightBackground": "#0DF0FF33",
		"editor.selectionBackground": "#0DF0FF33",
		"editor.lineHighlightBackground": "#00b7ff11",
		"editor.lineHighlightBorder": "#ffffff00",
		"editor.background": "#000",
		"editor.selectionHighlightBackground": "#0000ff99",
		"editor.wordHighlightBackground": "#ff00ff",

		// "editor.renderLineHighlight": "all",

		"editorIndentGuide.activeBackground": "#00b7ffbb",
		"editorIndentGuide.background": "#fff1",

		"editorGutter.background": "#111",
		"editorGutter.foldingControlForeground": "#ffff00",

		"editorLineNumber.foreground": "#333",
		"editorLineNumber.activeForeground": "#ffffff",

		"editorGroup.emptyBackground": "#f00",
		"editorCursor.foreground": "#00b7ffbb",
		"editorCursor.background": "#f00",


		"editorWhitespace.foreground": "#222",
		"editorBracketMatch.border": "#fff",
		"editorBracketMatch.background": "#ff0000",
		// "focusBorder": "#ff000f"
		"icon.foreground": "#ff0000",
		// "menu.background": "#ff0000"
		"menubar.selectionBackground": "#0000ff",
		"menubar.selectionForeground": "#ffffff",

		"minimapSlider.activeBackground": "#0000ff55",
		"minimap.errorHighlight": "#ff000055",
		"minimapSlider.background": "#66666644",
		"minimapSlider.hoverBackground": "#0000cc55",
		"minimap.findMatchHighlight": "#f00", // Highlight color for matches from search within files.
		"minimap.selectionHighlight": "#00b7ffbb", // Highlight color for the editor selection.
		// "minimap.errorHighlight": "#f00", // Highlight color for errors within the editor.
		"minimap.warningHighlight": "#ff0", // Highlight color for warnings within the editor.
		"minimap.background": "#000", // Minimap background color.
		// "minimapSlider.background": "#f00", // Minimap slider background color.
		// "minimapSlider.hoverBackground": "#f00", // Minimap slider background color when hovering.
		// "minimapSlider.activeBackground": "#f00", // Minimap slider background color when clicked on.
		"minimapGutter.addedBackground": "#0f0", // Minimap gutter color for added content.
		"minimapGutter.modifiedBackground": "#00f", // Minimap gutter color for modified content.
		"minimapGutter.deletedBackground": "#f00",

		"selection.background": "#0f0",
		"statusBar.foreground": "#ffffff",
		"sideBar.border": "#111",
		"sideBar.background": "#000000",

		"tab.inactiveBackground": "#000000",
		"tab.unfocusedHoverBackground": "#0000cc55",
		"tab.activeBackground": "#0000ff",

		"titleBar.activeBackground": "#111",

		"tab.hoverForeground": "#fff",
	},

	// ------------------------------------------------------------------------- opened file colors
	"workbench.colorTheme": "Default Dark+",
	"editor.tokenColorCustomizations": {

		"[Default Dark+]": {
			// "comments": "#444444",
		},
			"textMateRules": [
			{
				"scope": [
					"entity.name.tag",
					"meta.tag",
					"declaration.tag"
				],
				"settings": {
					"foreground": "#808080"
				}
			},
			{
				"scope": ["string"/* , "string.quoted.double" */],
				"settings": {
					"foreground": "#678CB1"
				}
			},
			{
				"scope": ["meta.embedded.block.html"],
				"settings": {
					"foreground": "#678CB1"
				}
			},
			{
				"scope": ["entity.other.attribute-name"],
				"settings": {
					"foreground": "#3E87E3"
				}
			},
			{
				"scope": [
					"meta.tag.inline.any",
					"punctuation.definition.tag.begin.xml",
					"punctuation.definition.tag.end.xml",
					"punctuation.section.embedded.begin.php",
					"punctuation.section.embedded.end.php",
					"punctuation.definition.tag.html"
				],
				"settings": {
					"foreground": "#333"
				}
			},
			{
				"scope": [
					"string.quoted.double",
					"source.js",
					"source.css",
					"source.less",
					"source.json meta.structure.dictionary.json meta.structure.dictionary.value.json string.quoted.double.json"
				],
				"settings": {
					"foreground": "#B4D3E2"
				}
			},
			// {
			// 	"scope": ["constant.language"], // true, false
			// 	"settings": {
			// 		"foreground": "#B4D3E2"
			// 	}
			// },
			{
				"scope": ["string constant"],
				"settings": {
					"foreground": "#FF2837"
				}
			},
			{
				"scope": ["support.type.property-name"],
				"settings": {
					"foreground": "#3E87E3"
				}
			},
			{
				"scope": [
					"keyword.control.import.include.php",
					"keyword.control.at-rule"
				],
				"settings": {
					"foreground": "#00BD38"
				}
			},
			{
				"scope": [
					"punctuation.definition.variable"
				],
				"settings": {
					"foreground": "#333"
				}
			},
			{
				"scope": ["source.js.embedded"],
				"settings": {
					"foreground": "#110000"
				}
			},
			{
				"scope": ["source comment", "comment.block.html"],
				"settings": {
					"foreground": "#333"
				}
			},
			{
				"scope": ["source comment.block"],
				"settings": {
					"foreground": "#7F50BE"
				}
			},
			{
				"scope": ["comment.line.number-sign.php"],
				"settings": {
					"foreground": "#004400"
				}
			},
			{
				"scope": [
					"variable",
					"support.other.variable",
					"variable.language",
					"variable.other",
					"variable.language.js"
				],
				"settings": {
					"foreground": "#808080"
				}
			},
			{
				"scope": [
					"constant" // String, Number, Boolean…, this, super
				],
				"settings": {
					"foreground": "#3E87E3"
				}
			},
			{
				"scope": [
					"keyword.operator.assignment",
					"keyword.operator.key",
					"keyword.operator.increment-decrement",
					"keyword.operator.arithmetic"
				],
				"settings": {
					"foreground": "#6969FA"
				}
			},
			{
				"scope": [
					"keyword"
				],
				"settings": {
					"foreground": "#64b2db"
				}
			},
			{
				"scope": [
					"keyword.control"
				],
				"settings": {
					"foreground": "#3E87E3"
				}
			},
			{
				"scope": [
					"variable.other.global" // #_SESSION
				],
				"settings": {
					"foreground": "#C8E4FD"
				}
			},
			{
				"scope": [
					"constant.numeric"
				],
				"settings": {
					"foreground": "#ff0"
				}
			},
			{
				"scope": [
					"storage"
				],
				"settings": {
					"foreground": "#64b2db"
				}
			},
			{
				"scope": [
					"support.function"
				],
				"settings": {
					"foreground": "#FFCD22"
				}
			},
			{
				"scope": [
					"meta.function-name",
					"entity.name.function",
					"meta.function-call"
				],
				"settings": {
					"foreground": "#FFFD87"
				}
			},
			{
				"scope": [
					"punctuation.definition.array.begin.json",
					"meta.structure.array.json"
				],
				"settings": {
					"foreground": "#EC7600"
				}
			},
			//////////////////////////////////////////////////////////////////// underline
			{
				"scope": [
					"storage"
				],
				"settings": {
					"fontStyle": "underline"
				}
			},
			//////////////////////////////////////////////////////////////////// bold
			{
				"scope": [
					"entity.name.type.class", //class names
					"keyword", //import, export, return…
					"constant", //String, Number, Boolean…, this, super
					"storage.modifier", //static keyword
					"storage.type.class.js", //class keyword

					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric"
				],
				"settings": {
					"fontStyle": "bold",
				}
			},
			//////////////////////////////////////////////////////////////////// italic
			{
				"scope": [
					"comment",
					"entity.name.type.class", //class names
					"keyword", //import, export, return…
					"storage.modifier", //static keyword
					"storage.type.class.js", //class keyword

					"invalid",
					"keyword.operator",
				],
				"settings": {
					"fontStyle": "italic", // :"" para tirar italic
				}
			},
		]
	}
}
